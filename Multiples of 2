/** You have to find if a number is a multiple of 2 or not. If it is, print YES, else, print NO. */

import java.util.*;
import java.lang.*;
import java.io.*;

class GFG {
	public static void main (String[] args) {
	    Scanner sc = new Scanner(System.in);
	    int t = sc.nextInt();
	    if(t % 2 == 0) {
	        System.out.println("YES");
	    }
	    else {
	        System.out.println("NO");
	    }
	}
}